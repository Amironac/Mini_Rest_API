<form method="POST" action="/forma/add" class="border p-4"style="width:300px;height:400px;
margin-top:10%;margin-left:40%;">
    <div class="form-group text-center border">
        <i class="fab fa-node-js fa-8x"></i>
    </div>
    <div class="form-group ">
        <label for="">Email </label>
        <input type="email" name="email" class="form-control"
         placeholder="Enter your email...">
    </div>
    <div class="form-group">
        <label for="">Password </label>
        <input type="password" name="password" class="form-control"
         placeholder="Enter your password...">
    </div>

    <div class="form-group text-center">
        <button type="submit" id="btn" class="btn btn-primary btn-lg ">Submit</button>
    </div>
</form>